generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model comment {
  id        String    @id
  content   String
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  postId    String
  authorId  String
  user      user      @relation(fields: [authorId], references: [id], map: "Comment_authorId_fkey")
  post      post      @relation(fields: [postId], references: [id], map: "Comment_postId_fkey")

  @@index([postId], map: "Comment_postId_fkey")
  @@index([authorId], map: "Comment_authorId_fkey")
}

model post {
  id        String    @id
  title     String
  content   String
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  authorId  String
  comment   comment[]
  author    user      @relation(fields: [authorId], references: [id], map: "Post_userId_fkey")

  @@index([authorId], map: "Post_userId_fkey")
}

model user {
  id        String    @id
  email     String    @unique
  name      String
  birthdate DateTime
  createdAt DateTime  @default(now())
  updatedAt DateTime? @default(now())
  password  String    @db.Text
  role      Int       @default(1)
  comment   comment[]
  post      post[]
}
